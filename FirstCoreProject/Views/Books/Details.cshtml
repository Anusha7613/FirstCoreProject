@model FirstCoreProject.Models.Books
@addTagHelper *,  Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
@if (Model != null)
{
    <table class="table table-hover" >
        <tr>
            <td>Book Id</td>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <td>Book Name</td>
            <td>@Model.BookName</td>
        </tr>
        <tr>
            <td>Author Name</td>
            <td>@Model.Author</td>
        </tr>
        <tr>
            <td>Published Date</td>
            <td>@Model.PublishedDate</td>
        </tr>
    </table>
}
else
{
    <h2>The Book Id Your searching is not available</h2>
}
<div class="row">
    <div class="col-md-5">
       <a asp-controller="Books" asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        
    </div>
</div>
<div class="row">
    <div class="col-md-5">
        <a asp-controller="Books" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-outline-warning">Delete</a>

    </div>
</div>
